<div class="flex-scaffholding -column">
    {{#sd-panel-header}}
        <label>
            Logs for
            {{#sd-tabs-list as |list|}}
                {{#sd-tab-item value="1" activeTab=list.activeTab activateTab="activateTab" registerTab="registerTab" targetObject=list}}
                    <button {{action "selectMode" 'SPAN'}}>this span only</button>
                {{/sd-tab-item}}
                {{#sd-tab-item value="2" activeTab=list.activeTab activateTab="activateTab" registerTab="registerTab" targetObject=list}}
                    <button {{action "selectMode" 'SPAN_CHILD'}}>this span and children</button>
                {{/sd-tab-item}}
            {{/sd-tabs-list}}
        </label>
    {{/sd-panel-header}}

    {{#sd-panel-content class="flex-grow -no-padding -flexbox"}}
        {{#sd-table sticky=true}}
            <thead class="thead">
                <th class="th -icon"></th>
                <th class="th -string">
                    <div class="th-inner">Container</div>
                </th>
                <th class="th -string">
                    <div class="th-inner">K</div>
                        </th>
                <th class="th -number">
                    <div class="th-inner">Date and Time</div>
                </th>
                <th class="th -string" colspan="3">
                    <div class="th-inner">Message</div>
                </th>
            </thead>
            <tbody class="tbody -compact">
                {{#each lines key="@index" as |line|}}
                    <tr class="tr" style={{line.color}}>
                        <td class="td -icon"><i class="material-icons" style={{line.lineColor}}>lens</i></td>
                        <td class="td -string">{{line.containerName}}</td>
                        <td class="td -string">{{line.k}}</td>
                        <td class="td -number">{{line.t}}</td>
                        <td class="td -string" colspan="3">{{line.b}}</td>
                    </tr>
                {{/each}}
            </tbody>
        {{/sd-table}}
    {{/sd-panel-content}}
</div>
