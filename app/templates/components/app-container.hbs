{{sd-header class="-fixed"}}

{{transactions-table
    transactions = transactions
    selected     = transaction
    select       = "selectTransaction"
    class        = "row-1"
}}

{{#if transaction}}
    {{flame-ui
        node    = transaction
        op      = aggregation
        data    = transactionData
        select  = "selectSpan"
        class   = chartPanelSize
        changeAggregation = "changeAggregation"
    }}

    {{#if span}}
        {{span-log
            span        = span
            spanMode    = spanMode
            log         = spanLog
            selectMode  = "selectSpanMode"
            class       = "row-1"
        }}
    {{/if}}
{{/if}}
